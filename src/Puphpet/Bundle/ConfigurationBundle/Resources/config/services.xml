<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="puphpet_configuration.example.class">Puphpet\Bundle\ConfigurationBundle\Example</parameter>
    </parameters>
    -->

    <services>
        <service id="configuration.configuration" class="Puphpet\Bundle\ConfigurationBundle\Dto\ConfigurationDto">
            <argument type="collection"/>
        </service>

        <service id="configuration.builder.default" class="Puphpet\Bundle\ConfigurationBundle\Configuration\ConfigurationBuilder">
            <argument type="service" id="configuration.configuration"/>
            <tag name="configuration.builder"/>
        </service>

        <service id="configuration.type.default" class="Puphpet\Bundle\ConfigurationBundle\Dto\Form\Type\ConfigurationType">
            <argument type="collection"/>
            <tag name="configuration.type"/>
        </service>
    </services>

</container>
